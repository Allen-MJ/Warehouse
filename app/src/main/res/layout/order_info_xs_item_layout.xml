<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/frame_four_distance"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/frame_four_distance"
        app:cardElevation="@dimen/frame_two_distance">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/frame_eight_distance"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_number"
                    android:layout_width="@dimen/frame_100_distance"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/frame_eight_distance"
                    android:text="序号"
                    android:textSize="@dimen/frame_text_normal_size"
                     />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:padding="@dimen/frame_eight_distance"
                    android:text="货物名称"
                    android:textSize="@dimen/frame_text_normal_size" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/frame_eight_distance"
                    android:text="出库数量"
                    android:textSize="@dimen/frame_text_normal_size" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/frame_eight_distance"
                    android:text="单价"
                    android:textSize="@dimen/frame_text_normal_size" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/frame_eight_distance"
                    android:text="小计"
                    android:textSize="@dimen/frame_text_normal_size" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_sh_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/frame_eight_distance"
                    android:text="损耗数量"
                    android:textSize="@dimen/frame_text_normal_size" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_sh_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/frame_eight_distance"
                    android:text="损耗单价"
                    android:textSize="@dimen/frame_text_normal_size" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_sh_rent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/frame_eight_distance"
                    android:text="损耗小计"
                    android:textSize="@dimen/frame_text_normal_size" />
            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>