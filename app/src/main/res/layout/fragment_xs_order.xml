<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gray_line_color">
    <include layout="@layout/bar_back"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="@dimen/frame_four_distance"
        app:cardElevation="1dp"
        app:cardCornerRadius="@dimen/frame_four_distance">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <androidx.core.widget.NestedScrollView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:scrollbars="none">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/frame_eight_distance">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/frame_text_normal_size"
                            android:textColor="@color/text_black_color"
                            android:padding="@dimen/frame_eight_distance"
                            android:text="@string/order_base_hint"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/base_update"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/frame_text_smaller_size"
                            android:padding="@dimen/frame_four_distance"
                            android:drawablePadding="@dimen/frame_four_distance"
                            android:drawableStart="@mipmap/ic_logo_01"
                            android:text="@string/update_bt"
                            android:gravity="center"
                            android:visibility="invisible"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/frame_four_distance"
                        app:cardBackgroundColor="@color/white"
                        android:layout_margin="@dimen/frame_four_distance"
                        app:cardElevation="1dp">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/frame_eight_distance"
                            android:paddingEnd="@dimen/frame_eight_distance">
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="top"
                                android:padding="@dimen/frame_eight_distance">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_black_color"
                                    android:textSize="@dimen/frame_text_small_size"
                                    android:text="@string/order_kh_name"
                                    android:padding="@dimen/frame_eight_distance"/>
                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/order_kh_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_black_color"
                                    android:textSize="@dimen/frame_text_small_size"
                                    android:background="@android:color/transparent"
                                    android:padding="@dimen/frame_eight_distance"
                                    android:hint="@string/order_kh_name_hint"
                                    android:gravity="center"/>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="top"
                                android:padding="@dimen/frame_eight_distance">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_black_color"
                                    android:textSize="@dimen/frame_text_small_size"
                                    android:text="@string/order_kh_address"
                                    android:padding="@dimen/frame_eight_distance"/>
                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/order_kh_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_black_color"
                                    android:textSize="@dimen/frame_text_small_size"
                                    android:background="@android:color/transparent"
                                    android:padding="@dimen/frame_eight_distance"
                                    android:hint="@string/order_kh_address_hint"
                                    android:gravity="center"/>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="top"
                                android:padding="@dimen/frame_eight_distance">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_black_color"
                                    android:textSize="@dimen/frame_text_small_size"
                                    android:text="@string/order_kh_phone"
                                    android:padding="@dimen/frame_eight_distance"/>
                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/order_kh_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_black_color"
                                    android:textSize="@dimen/frame_text_small_size"
                                    android:background="@android:color/transparent"
                                    android:padding="@dimen/frame_eight_distance"
                                    android:inputType="phone"
                                    android:hint="@string/order_kh_phone_hint"
                                    android:gravity="center"/>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.cardview.widget.CardView>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/frame_text_normal_size"
                            android:textColor="@color/text_black_color"
                            android:padding="@dimen/frame_eight_distance"
                            android:text="@string/order_date_hint"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/date_update"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/frame_text_smaller_size"
                            android:padding="@dimen/frame_four_distance"
                            android:drawablePadding="@dimen/frame_four_distance"
                            android:drawableStart="@mipmap/ic_logo_01"
                            android:text="@string/update_bt"
                            android:gravity="center"
                            android:visibility="invisible"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/frame_four_distance"
                        app:cardBackgroundColor="@color/white"
                        android:layout_margin="@dimen/frame_four_distance"
                        app:cardElevation="1dp">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/frame_eight_distance"
                            android:paddingEnd="@dimen/frame_eight_distance">
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="top"
                                android:padding="@dimen/frame_eight_distance">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_black_color"
                                    android:textSize="@dimen/frame_text_small_size"
                                    android:text="@string/order_date_hl"
                                    android:padding="@dimen/frame_eight_distance"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/order_date_hl"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_black_color"
                                    android:textSize="@dimen/frame_text_small_size"
                                    android:background="@android:color/transparent"
                                    android:padding="@dimen/frame_eight_distance"
                                    android:hint="@string/order_date_check_hint"
                                    android:drawableEnd="@mipmap/ic_logo_27"
                                    android:gravity="center"/>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_black_color"
                                android:textSize="@dimen/frame_text_small_size"
                                android:text="@string/order_date_yy_hint"
                                android:padding="@dimen/frame_eight_distance"/>
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="top"
                                android:padding="@dimen/frame_eight_distance">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_black_color"
                                    android:textSize="@dimen/frame_text_small_size"
                                    android:text="@string/order_date_ck"
                                    android:padding="@dimen/frame_eight_distance"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/order_date_ck"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_black_color"
                                    android:textSize="@dimen/frame_text_small_size"
                                    android:background="@android:color/transparent"
                                    android:padding="@dimen/frame_eight_distance"
                                    android:hint="@string/order_date_check_hint"
                                    android:drawableEnd="@mipmap/ic_logo_27"
                                    android:gravity="center"/>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="top"
                                android:padding="@dimen/frame_eight_distance">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_black_color"
                                    android:textSize="@dimen/frame_text_small_size"
                                    android:text="@string/order_date_hs"
                                    android:padding="@dimen/frame_eight_distance"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/order_date_hs"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_black_color"
                                    android:textSize="@dimen/frame_text_small_size"
                                    android:background="@android:color/transparent"
                                    android:padding="@dimen/frame_eight_distance"
                                    android:hint="@string/order_date_check_hint"
                                    android:drawableEnd="@mipmap/ic_logo_27"
                                    android:gravity="center"/>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.cardview.widget.CardView>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/frame_text_normal_size"
                            android:textColor="@color/text_black_color"
                            android:padding="@dimen/frame_eight_distance"
                            android:text="@string/order_remark"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/remark_update"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/frame_text_smaller_size"
                            android:padding="@dimen/frame_four_distance"
                            android:drawablePadding="@dimen/frame_four_distance"
                            android:drawableStart="@mipmap/ic_logo_01"
                            android:text="@string/update_bt"
                            android:gravity="center"
                            android:visibility="invisible"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/frame_four_distance"
                        app:cardBackgroundColor="@color/white"
                        android:layout_margin="@dimen/frame_four_distance"
                        app:cardElevation="1dp">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/order_remark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black_color"
                            android:minLines="3"
                            android:textSize="@dimen/frame_text_small_size"
                            android:background="@android:color/transparent"
                            android:padding="@dimen/frame_eight_distance"
                            android:hint="@string/order_remark_hint"
                            android:gravity="start|top"
                            android:lineSpacingMultiplier="1.2"
                            />
                    </androidx.cardview.widget.CardView>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.core.widget.NestedScrollView>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/frame_eight_distance">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/frame_text_normal_size"
                        android:textColor="@color/text_black_color"
                        android:padding="@dimen/frame_eight_distance"
                        android:text="@string/order_choice_flower"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/flower_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/frame_text_smaller_size"
                        android:padding="@dimen/frame_four_distance"
                        android:drawablePadding="@dimen/frame_four_distance"
                        android:drawableStart="@mipmap/ic_logo_01"
                        android:text="@string/update_bt"
                        android:gravity="center"
                        android:visibility="invisible"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/frame_four_distance"
                    app:cardBackgroundColor="@color/white"
                    android:layout_margin="@dimen/frame_four_distance"
                    app:cardElevation="1dp">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:text="@string/order_flower_name"
                            android:textSize="@dimen/frame_text_small_size"
                            android:gravity="center"
                            android:paddingTop="@dimen/frame_eight_distance"
                            android:paddingBottom="@dimen/frame_eight_distance"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="@string/order_flower_rent"
                            android:textSize="@dimen/frame_text_small_size"
                            android:gravity="center"
                            android:paddingTop="@dimen/frame_eight_distance"
                            android:paddingBottom="@dimen/frame_eight_distance"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="@string/order_flower_order"
                            android:textSize="@dimen/frame_text_small_size"
                            android:gravity="center"
                            android:paddingTop="@dimen/frame_eight_distance"
                            android:paddingBottom="@dimen/frame_eight_distance"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/delete"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/frame_text_small_size"
                            android:gravity="center"
                            android:paddingTop="@dimen/frame_eight_distance"
                            android:paddingBottom="@dimen/frame_eight_distance"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.cardview.widget.CardView>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/choice_rv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/frame_four_distance"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="@dimen/frame_eight_distance">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="start|center_vertical">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/order_money"
                            android:textSize="@dimen/frame_text_small_size"
                            android:textColor="@color/text_black_color"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/order_money"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/frame_text_normal_size"
                            android:textColor="@color/colorPrimary"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/order_commit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/text_white_color"
                        android:background="@drawable/btn_selector"
                        android:layout_margin="@dimen/frame_eight_distance"
                        android:text="@string/commit_bt"
                        android:gravity="center"
                        android:padding="@dimen/frame_eight_distance"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>