<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC363636"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:theme="@style/fulltrans">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2B363636"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/frame_43_distance">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2B363636"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/frame_32_distance"
            android:paddingBottom="@dimen/frame_32_distance">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/back" />

            <cn.allen.warehouse.widget.SearchEditText
                android:id="@+id/bar_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/frame_edge_distance"
                android:layout_marginRight="@dimen/frame_edge_distance"
                android:layout_weight="1"
                android:background="@drawable/wh_white_input_bg"
                android:drawableStart="@mipmap/ic_logo_18"
                android:drawableEnd="@mipmap/ic_logo_12"
                android:drawablePadding="@dimen/frame_edge_distance"
                android:gravity="start|center_vertical"
                android:hint="@string/search_order_no_hint"
                android:padding="@dimen/frame_edge_distance"
                android:singleLine="true"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/frame_text_smaller_size" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>