<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/frame_four_distance"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/frame_four_distance"
        app:cardElevation="1dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="@dimen/frame_four_distance"
                    android:text="xxxxxxx"
                    android:textSize="@dimen/frame_text_smaller_size" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/order_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/frame_eight_distance"
                    android:drawableLeft="@mipmap/ic_logo_21"
                    android:drawablePadding="@dimen/frame_four_distance"
                    android:gravity="center_vertical"
                    android:text="代配送"
                    android:textColor="@color/order_text_red"
                    android:textSize="@dimen/frame_text_small_size" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/show_item_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/frame_photo_icon_size"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:visibility="invisible"
                    android:src="@mipmap/ic_logo_26" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/order_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="@dimen/frame_four_distance"
                android:text="xxxxxxx"
                android:textColor="@color/text_normal_color"
                android:textSize="@dimen/frame_text_middle_size" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/frame_four_distance">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="地址:"
                    android:textColor="@color/text_normal_color"
                    android:textSize="@dimen/frame_text_normal_size" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_order_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
                    android:textColor="@color/text_normal_color"
                    android:textSize="@dimen/frame_text_normal_size" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/frame_four_distance">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/frame_four_distance">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="出库时间:"
                        android:textColor="@color/text_normal_color"
                        android:textSize="@dimen/frame_text_smaller_size" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_order_out_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="2020.9.25"
                        android:textColor="@color/text_normal_color"
                        android:textSize="@dimen/frame_text_smaller_size" />
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/frame_four_distance">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="回收时间:"
                        android:textColor="@color/text_normal_color"
                        android:textSize="@dimen/frame_text_smaller_size" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_order_back_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="2020.9.25"
                        android:textColor="@color/text_normal_color"
                        android:textSize="@dimen/frame_text_smaller_size" />
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/frame_four_distance">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="销售员:"
                        android:textColor="@color/text_normal_color"
                        android:textSize="@dimen/frame_text_smaller_size" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_salesman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="张三"
                        android:textColor="@color/text_normal_color"
                        android:textSize="@dimen/frame_text_smaller_size" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>