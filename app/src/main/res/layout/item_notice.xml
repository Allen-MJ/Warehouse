<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="@dimen/frame_edge_distance"
    android:paddingStart="@dimen/frame_edge_distance">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/icon_bg_selecor">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/nitice_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_logo_23"
            android:layout_margin="@dimen/frame_edge_distance"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nitice_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/frame_text_normal_size"
            android:textColor="@color/text_black_color"
            android:singleLine="true"
            android:ellipsize="end"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nitice_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/frame_text_small_size"
            android:textColor="@color/text_gray_color"
            android:padding="@dimen/frame_edge_distance"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/frame_two_distance"
        android:background="@color/gray_line_color"
        android:layout_marginEnd="@dimen/frame_eight_distance"
        android:layout_marginStart="@dimen/frame_eight_distance"/>
</androidx.appcompat.widget.LinearLayoutCompat>